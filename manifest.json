{
"name": "hamsterGestures",
"manifest_version": 2,
  "permissions": ["tabs","storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
			"matches": ["<all_urls>"],
      "js": ["mouseTrack.js"],
			"all_frames": true,
			"run_at": "document_start"
    }
  ],
"version": "1.5",
"options_page": "options.html",
"description": "A simple mouse gestures extension"
}
